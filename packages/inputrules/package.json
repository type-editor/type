{
	"name": "@type-editor/inputrules",
	"description": "This is a refactored version of the ProseMirror's 'inputrules' module.  Original: https://github.com/ProseMirror/prosemirror-inputrules",
	"version": "0.0.2",
	"license": "MIT",
	"homepage": "https://type-editor.io",
	"maintainers": [
		{
			"name": "Type Editor",
			"email": "type-editor@mailbox.org",
			"web": "https://type-editor.io"
		}
	],
	"repository": {
		"type": "git",
		"url": "git://github.com/type-editor/type.git"
	},
	"type": "module",
	"sideEffects": false,
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"require": "./dist/index.cjs"
		}
	},
	"keywords": [
		"type",
		"type-editor",
		"richtext-editor",
		"prosemirror"
	],
	"peerDependencies": {
		"@type-editor/commons": "workspace:^",
		"@type-editor/model": "workspace:^",
		"@type-editor/state": "workspace:^",
		"@type-editor/transform": "workspace:^"
	},
	"peerDevDependencies": {
		"@type-editor/editor-types": "workspace:^"
	},
	"devDependencies": {
		"@type-editor/commons": "workspace:^",
		"@type-editor/editor-types": "workspace:^",
		"@type-editor/model": "workspace:^",
		"@type-editor/state": "workspace:^",
		"@type-editor/transform": "workspace:^",
        "@type-editor/test-builder": "workspace:^"
    },
	"scripts": {
		"build": "vite build",
		"build:prod": "NODE_ENV=production vite build --mode production",
		"build:dev": "NODE_ENV=development tsc && vite build --mode development",
		"build:ts": "tsc --noEmit",
		"test": "vitest run",
		"test:watch": "vitest"
	}
}
