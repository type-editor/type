{
    "name": "@type-editor/view",
    "description": "This is a refactored version of the ProseMirror's 'view' module.  Original: https://github.com/ProseMirror/prosemirror-view",
    "version": "0.0.1",
    "license": "MIT",
    "homepage": "https://type-editor.io",
    "maintainers": [
        {
            "name": "Type Editor",
            "email": "type-editor@mailbox.org",
            "web": "https://type-editor.io"
        }
    ],
    "repository": {
        "type": "git",
        "url": "git://github.com/type-editor/type.git"
    },
    "type": "module",
    "sideEffects": false,
    "module": "dist/index.js",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "keywords": [
        "type",
        "type-editor",
        "richtext-editor",
        "prosemirror"
    ],
    "peerDependencies": {
        "@type-editor/commons": "workspace:^",
        "@type-editor/decoration": "workspace:^",
        "@type-editor/dom-change-util": "workspace:^",
        "@type-editor/dom-coords-util": "workspace:^",
        "@type-editor/dom-util": "workspace:^",
        "@type-editor/editor-types": "workspace:^",
        "@type-editor/input": "workspace:^",
        "@type-editor/model": "workspace:^",
        "@type-editor/selection-util": "workspace:^",
        "@type-editor/state": "workspace:^",
        "@type-editor/viewdesc": "workspace:^"
    },
    "peerDevDependencies": {
        "@type-editor/editor-types": "workspace:^"
    },
    "devDependencies": {
        "@type-editor/commands": "workspace:^",
        "@type-editor/commons": "workspace:^",
        "@type-editor/decoration": "workspace:^",
        "@type-editor/dom-change-util": "workspace:^",
        "@type-editor/dom-coords-util": "workspace:^",
        "@type-editor/dom-util": "workspace:^",
        "@type-editor/editor-types": "workspace:^",
        "@type-editor/input": "workspace:^",
        "@type-editor/keymap": "workspace:^",
        "@type-editor/model": "workspace:^",
        "@type-editor/selection-util": "workspace:^",
        "@type-editor/state": "workspace:^",
        "@type-editor/test-builder": "workspace:^",
        "@type-editor/transform": "workspace:^",
        "@type-editor/viewdesc": "workspace:^"
    },
    "scripts": {
        "build": "vite build",
        "build:prod": "NODE_ENV=production vite build --mode production",
        "build:dev": "NODE_ENV=development tsc && vite build --mode development",
        "build:ts": "tsc --noEmit",
        "test": "vitest run",
        "test:watch": "vitest"
    }
}
